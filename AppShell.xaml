<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PizzaMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:page="clr-namespace:PizzaMAUI.page"
    Shell.FlyoutBehavior="Disabled"
    Title="PizzaMAUI"
    Shell.BackgroundColor="DarkGoldenrod">

    <Shell.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="DarkGoldenrod" StatusBarStyle="LightContent"/>
    </Shell.Behaviors>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate page:MainPage}"
        Route="MainPage" />
    
    <ShellContent
        ContentTemplate="{DataTemplate page:HomePage}"
        Route="HomePage" />

    
</Shell>
